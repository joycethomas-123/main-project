.menu li a{
    display: inline-block;
    text-decoration: none;
    color: #63a3e8;
    text-align: center;
    transition: 0.15s ease-in-out;
    position:relative;
    text-transform: uppercase;
    font-size: 1.5em;
    
}
.menu li a::after {
    content:"";
    position: absolute;
    bottom: 0;
    left:0;
    width: 0;
    height:1px;
    background-color: var(--color1);
    transition: 0.15s ease-in-out;
}
.menu li a:hover:after{
    width: 100%;
    color: #ffffff;
    background-color: #63a3e8;
}
.open-menu , .close-menu{
    position: absolute;
    color: #63a3e8;
    cursor: pointer;
    font-size: 1.5rem;
    display: none;
}
.open-menu {
    top: 50%;
    right:20px;
    transform: translateY(-50%);
}
.close-menu{
    top:20px;
    right:20px;
}
#check{
    display:none;
}
.logo3{
