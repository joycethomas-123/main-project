    .row1{
        margin-top:-50px;
    }
    .image{
        width: 100%;
        float: none; 
    }
    .image img{
        margin-top:150px;
        
    }
    .content{
        width:100%;
        float: none;
        margin-left: 18px;
        margin-right: 15px;
    }
    .content h1{
        font-size: 40px;
        letter-spacing: 2px;
        margin-top: 30px;
        margin-left: 10px;
    }
    .content h2{
           font-size: 30px;
           margin-left: 28px;
           letter-spacing: 1px;
    }
    .content p{
        font-size: 18px;
    }
    .act{
        display: inline-block;
        margin-top: 100px;
        justify-content: center;
    align-items: center;
    }
    .box1,.box2,.box3{
        margin-left: 70px;
    }
    .heading{
        background-color: #63a3e8;
        font-size: 40px;
    }
    .box1 h2,.box2 h2,.box3 h2{
        font-size: 28px;
    }
    .contact-info{
        font-size: 20px;
        display: inline;
        margin-left: 10px;
    }
    
}


