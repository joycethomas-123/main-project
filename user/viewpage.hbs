    margin-top: -100px;
}
.alumni1 .color-box{
    position: absolute;
    right: 0;
    top: 0;
    background: linear-gradient(#fff,#63a3e8);
    border-radius: 100px 0px 0px 500px;
    height: 70%;
    width: 45%;
    z-index : -1; 
}
.about{
    width: 100%;
    min-height: 100vh;
