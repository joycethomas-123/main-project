        flex-basis: 50%;
        margin-bottom: 50px;
        display: block;
    }
    .alumni1 .controller{
        width: 40%;
        visibility: hidden;
    }
    .alumni1 .color-box{
        transform: translateX(-5px) ;
        visibility: hidden;
    }
    .alumni{
        flex-basis: 50%;
    }
    .alumni h2{
        font-size: 30px;
        margin-left: 60px;
    }
    .alumni h3{
        font-size: 20px;
        margin-left: 60px;
    }
    .alumni ::after{
        content: '';
        width: 10px;
        height: 35%;
        background: linear-gradient(#fff,#63a3e8);
        position: absolute;
        left: 40px;
        top: -3px;
