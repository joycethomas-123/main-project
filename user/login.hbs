<body>
    <section>
        <div class="imgBx">
            <img src="https://www.univariety.com/blog/wp-content/uploads/2022/02/5853-min-scaled-1200x900.jpg">
        </div>
<div class="row">
    <div class="login-box">
        <div class="login-header">
            <h2 class = "text-center">Login</h2>
            <form action="/login" method="POST">
                
                <div class="form-group">
                    <span>Username</span>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <span>Password</span>
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>
            
                <div class="forgot">
                    
                    <a href="/signup">Create new account</a>
                </div>
                <div class="input-submit">
                    <button type="submit" class="submit-btn" id="submit">Login</button>
                    
                </div>
            <div class="recover">
                <p>Do you want to <a href="/recoverpass"> Recover password</a></p>
                  
                </div>
                
            
            </form>
        </div>
    </div>
</div>
</section>
