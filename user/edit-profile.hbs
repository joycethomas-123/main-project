<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Document</title>
    <link rel="stylesheet" href="./style4.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<script>
    function viewpImage(event){
        document.getElementById('userView').src = URL.createObjectURL(event.target.files[0])
    }
</script>
<body>

<section>
    <div class="row">
        <div class="edit-box">
            <div class="edit-header">
                <h2 class="text-center">Edit Profile</h2>
                <form action="/edit-profile/{{user._id}}" method="POST" enctype="multipart/form-data">
                 <div class="form-group3">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control1" value="{{user.Name}}">
                  </div>
                  <div class="form-group3">
                    <label for="gender">Gender</label>
                    <select name="gender" class="form-control2">
                        <option value="Male" {{#if (eq gender "Male")}}selected{{/if}}>Male</option>
                        <option value="Female" {{#if (eq gender "Female")}}selected{{/if}}>Female</option>
                        <option value="Custom" {{#if (eq gender "Custom")}}selected{{/if}}>Custom</option>
                    </select>
                  </div>
                  <div class="form-group3">
                    <label for="">Email</label>
                    <input type="email" name="Email" class="form-control3" value="{{user.Email}}">
                  </div>
                  <div class="form-group3">
                    <label for="">Contact No</label>
                    <input type="text" name="Contact" class="form-control4" value="{{user.Contact}}">
                  </div>
                  <div class="form-group3">
                    <label for="">Image</label>
                    <img src="/user-images/{{user._id}}.jpg" alt="" style="width:100px;" id="userView">
                    <input type="file" name="Image" class="form-control5" onchange="viewpImage(event)"><br>
                  </div>
                  <div class="update">
                    <a href="/updatepass">
                        <button type="button" class="btn btn-warning">Update password</button>
                    </a><br>
                   </div>
                  <div class="submit2">
                    <button type="submit" class="btn btn-warning mt-4">Submit</button>
                    <button type="reset" class="btn btn-warning mt-4">Reset</button>
                </div>
                <div class="cancel">
                    <a href="/profile" class="btn btn-danger mt-4">Cancel</a>
                 </div>
                </form>
            </div>
        </div>
    </div>
</section>
</body>
</html>
